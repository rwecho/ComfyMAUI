<Flex Vertical="@IsVertical" Gap="large" Align="center">
    <span class="text-gray-400 text-md">@Title</span>
    <span class="text-gray-800 text-md">@Value</span>
</Flex>

@code {
    [Parameter]
    public string Title { get; set; } = null!;

    [Parameter]
    public string Value { get; set; } = null!;

    [Parameter]
    public bool IsVertical { get; set; } = true;

}
